  <!-- Modal -->
  <div class="modal fade" id="add-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add <%= page %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/covid" method="POST">
            <div class="modal-body">
              <div class="form-group">
                <label for="name">Tanggal</label>
                <input class="form-control" id="tanggal" name="tanggal" placeholder="Masukan Tanggal" type="text" required/>
              </div>
              <div class="form-group">
                <label for="name">Nomor Pasien</label>
                <input class="form-control" id="no_pasien" name="no_pasien" placeholder="Masukan No Pasien" type="text" required/>
              </div>
              <div class="form-group">
                <label for="name">Usia (th)</label>
                <input class="form-control" id="usia" name="usia" placeholder="Masukan Usia" type="number" required/>
              </div>
              <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="status" name="status">
                  <option>---Pilih Status---</option>
                  <option value="Sembuh">Sembuh</option>
                  <option value="Dirawat">Dirawat</option>
                  <option value="Meninggal">Meninggal</option>
                </select>
              </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                <button type="submit" class="btn btn-primary">Simpan</button>
            </div>
        </form>
      </div>
    </div>
  </div>
