  <!-- Modal -->
  <div class="modal fade" id="edit-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ubah <%= page %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/covid?_method=PUT" method="POST">
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">Tanggal</label>
                    <input class="form-control tanggal" id="tanggal" name="tanggal" placeholder="Masukan Tanggal" type="text" required/>
                </div>
                <div class="form-group">
                    <label for="name">Nomor Pasien</label>
                    <input class="form-control no_pasien" id="no_pasien" name="no_pasien" placeholder="Masukan No Pasien" type="text" required/>
                </div>
                <div class="form-group">
                    <label for="name">Usia (th)</label>
                    <input type="text" class="form-control usia" name="usia" placeholder="Masukan Usia" required>
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control status" name="status">
                        <option value="Sembuh">Sembuh</option>
                        <option value="Dirawat">Dirawat</option>
                        <option value="Meninggal">Meninggal</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" class="id" name="id"></input>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                <button type="submit" class="btn btn-primary">Ubah</button>
            </div>
        </form>
      </div>
    </div>
  </div>